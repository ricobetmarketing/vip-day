    <audio id="snd-scan" loop src="https://assets.mixkit.co/active_storage/sfx/2558/2558-preview.mp3"></audio>
    <audio id="snd-success" src="https://assets.mixkit.co/active_storage/sfx/1435/1435-preview.mp3"></audio>

    <script>
        let scanTimer;
        const scanner = document.getElementById('scanner');
        const statusText = document.getElementById('status');
        const sndScan = document.getElementById('snd-scan');

        const prizes = ["X3", "X5", "X10", "THANK YOU"];

        function startScan() {
            scanner.classList.add('scanning');
            statusText.innerText = "SCANNING BIOMETRICS...";
            sndScan.play().catch(() => {});
            
            scanTimer = setTimeout(() => {
                finishScan();
            }, 3000); // 3 seconds of "curiosity" building
        }

        function stopScan() {
            if (scanner.classList.contains('scanning')) {
                clearTimeout(scanTimer);
                scanner.classList.remove('scanning');
                statusText.innerText = "SCAN INTERRUPTED - HOLD AGAIN";
                sndScan.pause();
                sndScan.currentTime = 0;
            }
        }

        function finishScan() {
            sndScan.pause();
            document.getElementById('snd-success').play().catch(() => {});
            
            const result = prizes[Math.floor(Math.random() * prizes.length)];
            document.getElementById('prize-text').innerText = result;

            if(result !== "THANK YOU") {
                confetti({
                    particleCount: 100,
                    spread: 70,
                    origin: { y: 0.6 },
                    colors: ['#00f2ff', '#d4af37']
                });
            }

            document.getElementById('overlay').style.display = 'flex';
        }
    </script>
</body>
